FROM node:18-alpine as build

WORKDIR /app

# Copy package files
COPY applications/dashboard/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY applications/dashboard/ ./

# Build the application
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files
COPY --from=build /app/build /usr/share/nginx/html

# Copy nginx configuration
COPY deployment/cloud/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]

