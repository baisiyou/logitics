FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY ai-inference/vertex_ai_service.py .
COPY config/ ./config/

# Expose port
EXPOSE 8000

# Run the application
CMD ["python", "vertex_ai_service.py"]

